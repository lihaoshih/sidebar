@page "/create_account"
@inject NavigationManager NavigationManager

<div class="row-layout create-account-container">
    <div class="row-layout left">
        <div class="column-layout group">
            <div class="row-layout group_1">
                <img src="assets/slingshot-icon.svg" class="image" />
                <p class="typography__subtitle-2 text">
                    TEAM COLLABORATION
                </p>
            </div>
            <h5 class="h5">
                Create your free account
            </h5>
            <IgbInput Label="Email / username" Outlined="true" class="input" create_account-scope></IgbInput>
            <IgbInput DisplayType="InputType.Password" Label="Password" Outlined="true" class="input" create_account-scope></IgbInput>
            <div class="row-layout group_2">
                <IgbInput Label="First Name" Outlined="true" class="input_1" create_account-scope></IgbInput>
                <IgbInput Label="Last Name" Outlined="true" class="input_1" create_account-scope></IgbInput>
            </div>
            <p class="typography__body-2 text_1">
                By providing your information and submitting this form, you are agreeing to Infragistic's Terms of Use and Privacy Policy.
            </p>
            <IgbButton Size="SizableComponentSize.Large" @onclick="@(e => Navigate("master_view"))" class="button" create_account-scope>
                CREATE NEW ACCOUNT
                <IgbRipple></IgbRipple>
            </IgbButton>
            <div class="row-layout group_3">
                <p class="typography__body-2 text_2">
                    Already have an account?
                </p>
                <a @onclick="@(e => Navigate(""))" class="typography__body-2 hyperlink">
                    Sign in
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    private void Navigate(string path)
    {
        NavigationManager.NavigateTo(path);
    }
}

@page "/master_view/dashboards"

<div class="row-layout dashboards-container">
    <div class="column-layout left-nav">
        <h6 class="content_1">
            Dashboards
        </h6>
        <IgbList class="list" dashboards-scope>
            <IgbListItem>
                <div slot="title">Dashboards</div>
                <span slot="end" class="material-icons icon">
                    dashboard
                </span>
            </IgbListItem>
            <IgbListItem>
                <div slot="title">Favorites</div>
                <span slot="end" class="material-icons icon">
                    star
                </span>
            </IgbListItem>
            <IgbListItem>
                <div slot="title">Recent</div>
                <span slot="end" class="material-icons icon">
                    access_time
                </span>
            </IgbListItem>
            <IgbListItem>
                <div slot="title">Samples</div>
                <span slot="end" class="material-icons icon">
                    ballot
                </span>
            </IgbListItem>
        </IgbList>
    </div>
    <div class="column-layout right-container">
        <div class="column-layout content">
            <h5 class="content_1">
                Recent
            </h5>
            <div class="row-layout group">
                <IgbCard class="card" dashboards-scope>
                    <IgbCardMedia class="media-content" dashboards-scope>
                        <img src="assets/reveal-app-data-visualization-dashboard-screenshot-768.jpg" class="image" />
                    </IgbCardMedia>
                    <IgbCardHeader>
                        <h3 slot="title">
                            Artists Analysis
                        </h3>
                        <h5 slot="subtitle">
                            Jun 15, 2020 - Jason Anderson
                        </h5>
                    </IgbCardHeader>
                    <IgbCardActions class="actions-content" dashboards-scope>
                        <IgbIconButton Variant="IconButtonVariant.Flat">
                            <span class="material-icons">
                                star_border
                            </span>
                            <IgbRipple></IgbRipple>
                        </IgbIconButton>
                        <IgbIconButton Variant="IconButtonVariant.Flat">
                            <span class="material-icons">
                                share
                            </span>
                            <IgbRipple></IgbRipple>
                        </IgbIconButton>
                    </IgbCardActions>
                </IgbCard>
                <IgbCard class="card" dashboards-scope>
                    <IgbCardMedia class="media-content" dashboards-scope>
                        <img src="assets/reveal-app-data-visualization-decision-making-create-chart-types-graphic-768.jpg" class="image" />
                    </IgbCardMedia>
                    <IgbCardHeader>
                        <h3 slot="title">
                            For evaluation
                        </h3>
                        <h5 slot="subtitle">
                            Jun 15, 2020 - Martina Roberts
                        </h5>
                    </IgbCardHeader>
                    <IgbCardActions class="actions-content" dashboards-scope>
                        <IgbIconButton Variant="IconButtonVariant.Flat">
                            <span class="material-icons">
                                star
                            </span>
                            <IgbRipple></IgbRipple>
                        </IgbIconButton>
                        <IgbIconButton Variant="IconButtonVariant.Flat">
                            <span class="material-icons">
                                share
                            </span>
                            <IgbRipple></IgbRipple>
                        </IgbIconButton>
                    </IgbCardActions>
                </IgbCard>
                <IgbCard class="card" dashboards-scope>
                    <IgbCardMedia class="media-content" dashboards-scope>
                        <img src="assets/reveal-app-data-visualization-dashboard-screenshot-768.jpg" class="image" />
                    </IgbCardMedia>
                    <IgbCardHeader>
                        <h3 slot="title">
                            Stylescape Results
                        </h3>
                        <h5 slot="subtitle">
                            Jun 15, 2020 - Caroline Sanders
                        </h5>
                    </IgbCardHeader>
                    <IgbCardActions class="actions-content" dashboards-scope>
                        <IgbIconButton Variant="IconButtonVariant.Flat">
                            <span class="material-icons">
                                star_border
                            </span>
                            <IgbRipple></IgbRipple>
                        </IgbIconButton>
                        <IgbIconButton Variant="IconButtonVariant.Flat">
                            <span class="material-icons">
                                share
                            </span>
                            <IgbRipple></IgbRipple>
                        </IgbIconButton>
                    </IgbCardActions>
                </IgbCard>
                <IgbButton Variant="ButtonVariant.Fab" Size="SizableComponentSize.Large" class="button" dashboards-scope>
                    <span class="material-icons">
                        add
                    </span>
                    <IgbRipple></IgbRipple>
                </IgbButton>
            </div>
        </div>
    </div>
</div>

